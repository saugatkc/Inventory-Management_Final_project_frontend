<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvDailyProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imgProductImg"
            android:text="Daily Product Name"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="20dp"
                android:layout_below="@+id/cost"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDate"
                android:text="Date"
                android:textSize="20dp"
                android:layout_toRightOf="@id/date"
                android:layout_below="@+id/cost"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:textSize="20dp"
                android:layout_below="@+id/date"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuantity"
                android:text="Quantity"
                android:textSize="20dp"
                android:layout_toRightOf="@id/quantity"
                android:layout_below="@+id/date"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/damaged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Damaged: "
                android:textSize="20dp"
                android:layout_below="@+id/quantity"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDamaged"
                android:text="Damaged"
                android:textSize="20dp"
                android:layout_toRightOf="@id/damaged"
                android:layout_below="@+id/quantity"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining: "
                android:textSize="20dp"
                android:layout_below="@+id/damaged"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRemaining"
                android:text="remaining"
                android:textSize="20dp"
                android:layout_toRightOf="@id/remaining"
                android:layout_below="@+id/damaged"
                android:layout_marginLeft="5dp"/>
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Delete"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tvRemaining"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>